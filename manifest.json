{
  "manifest_version": 3,
  "name": "Multi-Chat AI",
  "description": "Envía prompts a múltiples IAs a la vez y compara sus respuestas.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "activeTab",
    "clipboardWrite",
    "clipboardRead",
    "contextMenus",
    "cookies"
  ],
  "host_permissions": [
    "*://chatgpt.com/*",
    "*://chat.openai.com/*",
    "*://*.openai.com/*",
    "*://gemini.google.com/*",
    "*://*.google.com/*",
    "*://claude.ai/*",
    "*://*.claude.ai/*",
    "*://www.meta.ai/*",
    "*://meta.ai/*",
    "*://x.com/*",
    "*://twitter.com/*",
    "*://www.perplexity.ai/*",
    "*://perplexity.ai/*"
  ],
  "background": {
    "service_worker": "background_streaming.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://*.openai.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://*.claude.ai/*",
        "*://www.meta.ai/*",
        "*://meta.ai/*",
        "*://x.com/*",
        "*://www.perplexity.ai/*",
        "*://perplexity.ai/*"
      ],
      "js": ["content_script_direct_api.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sidebar.css", "sidebar.js", "icons/*", "proof-worker.js"],
      "matches": [
        "*://chatgpt.com/*",
        "*://chat.openai.com/*",
        "*://*.openai.com/*",
        "*://gemini.google.com/*",
        "*://claude.ai/*",
        "*://*.claude.ai/*",
        "*://www.meta.ai/*",
        "*://meta.ai/*",
        "*://x.com/*",
        "*://www.perplexity.ai/*",
        "*://perplexity.ai/*"
      ]
    }
  ]
}
